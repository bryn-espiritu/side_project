<%= form_with model: banner, url: path do |f| %>
  <div class="d-flex justify-content-center">
    <div class="w-25 form-control bg-light">
      <div>
        <%= f.label :preview %>
        <%= f.file_field :preview, class: 'form-control' %>
      </div>

      <div class="field my-5">
        <%= f.label :online_at %>
        <%= f.datetime_field :online_at, class: 'form-control' %>
      </div>

      <div class="field my-5">
        <%= f.label :offline_at %>
        <%= f.datetime_field :offline_at, class: 'form-control' %>
      </div>

      <div class="my-3">
        <label for="status"> Status</label>
        <p>
          <% Offer.statuses.keys.each do |status| %>
            <%= f.radio_button :status, status %>
            <%= f.label status.to_sym %>
          <% end %></p>
      </div>

      <div class="d-flex">
        <%= f.submit "Submit", class: "btn btn-outline-primary mx-5" %>
        <%= link_to "Back", :back, class: "btn btn-outline-danger" %>
      </div>

    </div>
  </div>
<% end %>