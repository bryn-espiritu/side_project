<h1>Admin Users</h1>
<table class="table table-striped table-hover">
  <thead>
  <tr>
  <th>id</th>
    <th>Avatar</th>
  <th>username</th>
  <th>email</th>
  <th>role</th>
  </tr>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= image_tag user.image.url if user.image.present? %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>


    </tr>
  <% end %>
</table>