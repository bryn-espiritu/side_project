<h2 class="text-center mb-5">Admin Log in</h2>

<div class=" form-control container w-25 bg-light">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-dark" %>
    </div>


    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <% end %>

  <%= render "users/shared/links" %>

</div>
