<h1 class="text-center">Category List <span><%= link_to 'New', new_admin_category_path, class: "btn btn-outline-info" %></span> <span><%= link_to 'Back', :back %></span></h1>
<div class="d-flex justify-content-center">
  <div class="container text-center">
    <% @categories.each do |category| %>
      <div class="card mx-auto my-2" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted">ID no. <%= category.id %></h6>
          <div class="row mx-0">
          <div class="col"><%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-warning btn-sm" %></div>
          <div class="col"><%= button_to 'Delete', admin_category_path(category), method: :delete, class: "btn btn-danger btn-sm" %></div>
          </div>
          </div>
      </div>
    <% end %>
  </div>
</div>