<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @banners.each do |banner| %>
        <div class="carousel-item active">
          <%= image_tag "#{banner.preview.url}", class: "d-block w-100", style: "height: 500px;" %>
        </div>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
<div class="alert alert-info">
  <marquee class="h4 p-0">Announcement:
    <% @news_tickers.each do |news| %>
      <%= news.content %>
    <% end %>
  </marquee>
</div>
<p class="alert alert-warning">Winners!</p>

  <div class="row">
    <div class="col-2"></div>
    <% @winners.each do |winner| %>
      <div class="card mx-2" style="width: 18rem;">
        <%= image_tag "#{winner.picture.url}", class: "card-image-top", style: "height: 250px;"  %>
        <div class="card-body">
          <h5 class="card-title"><%= winner.user.email %></h5>
          <p class="card-text"><%= winner.comment %></p>
        </div>
      </div>
    <% end %>
  </div>




