<h1>Comments</h1>

<div class="container">
  <%= form_with model: @winner, url: user_share_path do |f| %>

    <div class="field my-3">
      <%= f.label :picture %>
      <%= f.file_field :picture, class: 'form-control' %>
    </div>

    <div class="my-3">
      <%= f.label :comment %>
      <%= f.text_area :comment, class: "form-control" %>
    </div>
<%= f.submit "Post", class: "btn btn-lg btn-outline-success" %>
  <% end %>
</div>