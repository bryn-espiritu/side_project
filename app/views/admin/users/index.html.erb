
<h1>Admin Users</h1>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>ID</th>
    <th>Parent Email</th>
    <th>Email</th>
    <th>Children Members</th>
    <th>Coins</th>
    <th>Total Used Coins</th>
    <th>Total Deposit</th>
    <th>Member Total Deposit</th>
    <th>Phone Number</th>
    <th>Action</th>
  </tr>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.parent&.email %></td>
      <td><%= user.email %></td>
      <td><%= user.children_members %></td>
      <td><%= user.coins %></td>
      <td><%= user.bets.count %></td>
      <td><%= user.total_deposit %></td>
      <td><%= user.children.pluck(:total_deposit).sum  %></td>
      <td><%= user.phone %></td>
      <td><%= link_to "Balance Operate", admin_user_new_path(user, :increase), class: "btn btn-outline-primary" %></td>


    </tr>
  <% end %>
</table>