<div class="mt-3 container form-control w-50 bg-light">
  <p class="d-flex justify-content-center"><%= image_tag @user.image.url, class: "rounded-circle", style: "height: 300px; width: 300px" if @user.image? %></p>
  <div class="container">
    <table class="table table-borderless">
      <thead>
      <tr>
        <th>Username</th>
        <th>Email Address</th>
        <th>Coins</th>
        <th>Date Created</th>
      </tr>
      </thead>
      <tr>
        <td><%= @user.username %></td>
        <td><%= @user.email %></td>
        <td><%= @user.coins %></td>
        <td><%= @user.created_at %></td>
      </tr>
    </table>
  </div>

  <button class="btn btn-outline-success w-100">Cash in Now</button>
  <div class="">
    <ul class="nav nav-pills nav-justified mt-3 mb-3 hstack gap-3" style="list-style: none">
      <li class="nav-item"><%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-success w-100" %></li>
      <li class="nav-item"><%= link_to "Address", user_addresses_path, class: "btn btn-outline-success w-100" %></li>
    </ul>
  </div>
</div>

<div class="d-flex my-3 justify-content-center ">
  <%= link_to "Lottery History", user_user_profile_path(bet: :bets), class: "btn btn-outline-info mx-2" %>
  <%= link_to "Order History", user_user_profile_path(order: :orders), class: "btn btn-outline-info mx-2" %>
  <%= link_to "Winner History", user_user_profile_path(winner: :winners), class: "btn btn-outline-info mx-2" %>
</div>

<div class="container">
<span>
  <% @bets&.each do |bet| %>
    <div class="card">
      <h4 class="card-header">Serial Number: <%= bet.serial_number %></h4>
      <div class="card-body">
        <h6 class="card-title">Created at <%= bet.created_at %></h6>
        <div class="container px-4 text-center">
          <div class="row gx-5">
            <div class="col">
              <div class="p-3">Coin: <%= bet.coin %></div>
            </div>
            <div class="col">
              <div class="p-3">State: <%= bet.state %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</span>

  <span>
  <% @orders&.each do |order| %>
  <div class="card my-2">
      <h4 class="card-header alert alert-success">Serial Number: <%= order.serial_number %></h4>
      <div class="card-body">
        <h6 class="card-title">Created at <%= order.created_at %></h6>
        <div class="container px-4 text-center">
          <div class="row gx-5">
            <div class="col">
              <div class="p-3">Coins: <%= order.coin %></div>
            </div>
            <div class="col">
              <div class="p-3">State: <%= order.state %></div>
              <div class="p-3">Amount: <%= order.amount %></div>
            </div>
          </div>
        </div>
      </div>
  </div>
  <% end %>
</span>

  <span class="d-flex justify-content-center">
  <% @winners&.each do |winner| %>
      <div class="card m-2" style="width: 50rem;">
  <%= image_tag winner.picture.url, class: "card-image-top" if winner.picture? %>
  <div class="card-body">
    <h5 class="card-title">Serial Number: <%= winner.bet.serial_number %></h5>
    <p class="card-text my-0">Item: <%= winner.item.name %></p>
    <p class="card-text my-0">State: <%= winner.state %></p>
    <p class="card-text">Date: <%= winner.created_at %></p>
    <%= link_to "Process Claim", edit_user_winner_path(winner), class: "btn btn-outline-success" if winner.may_claim? %>
    <%= link_to "Share", edit_user_share_path(winner), class: "btn btn-outline-success" if winner.may_share? %>
  </div>
</div>
  <% end %>
</span>

  <%= paginate @orders if @orders.present? %>
  <%= paginate @bets if @bets.present? %>
  <%= paginate @winners if @winners.present? %>


</div>
