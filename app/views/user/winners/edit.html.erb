<div>
  <% if @winner.errors.any? %>
    <% @winner.errors.each do |error| %>
      <h3 style="color: #c11111"><%= error.full_message %> </h3>
    <% end %>
  <% end %>
</div>

<div class="form-control container bg bg-light">
  <label class="h3" for="Address">Confirm Address</label>
  <%= form_with model: @winner, url: user_winner_path do |f| %>
    <div class="my-2 h5">
      <% current_user.addresses.each do |address| %>
        <div class="mt-3">
        <%= f.radio_button :address_id, address.id, checked: address.is_default? %>
        <%= f.label "#{address.street_address} #{address.barangay.name}, #{address.city_municipality.name},
             #{address.province.name}, #{address.region.name.upcase}" %>
      <% end %>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%#= button_to "Create New", new_user_address_path, class: "btn btn-outline-info mx-2" %>
      <%= f.submit "Claim" , class: "btn btn-outline-success mx-2" %>
    </div>
  <% end %>

</div>
</div>