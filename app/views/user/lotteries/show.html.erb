<div class="container my-2">
  <%= link_to "Back", :back, class: "btn btn-lg btn-warning" %>
</div>
<div class="container d-flex justify-content-center my-3">
  <div class="card" style="width: 30rem;">
    <%= image_tag @item.image.url, class: "card-image-top p-3", style: 'height:30rem; width: 100%' if @item.image.present? %>
    <div class="card-body">
      <h5 class="card-title"><%= @item.name %></h5>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center text-center">
  <%= form_with model: @bets, url: user_lotteries_path, method: :post do |f| %>
    <%= f.text_field :coin, class: "form-control my-2", style: "width: 450px;" %>
    <%= hidden_field_tag :item_id, @item.id %>
    <%= f.submit "Submit", class: "btn btn-outline-warning w-50" %>
  <% end %>
</div>
  <div class="my-2 container alert alert-warning d-flex justify-content-center w-25">
    <ul>
    <% @serial_number.each do |bet| %>
     <li class="my-2"> Serial number: <%= bet.serial_number %></li>
      <% end %>
    </ul>
  </div>
